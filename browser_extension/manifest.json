{
  "manifest_version": 3,
  "name": "Cloak - Auto-Anonymize for ChatGPT",
  "version": "2.0.0",
  "description": "Automatically anonymize PII before sending to ChatGPT and restore it in responses",
  "icons": {
    "16": "invisible.png",
    "48": "invisible.png",
    "128": "invisible.png"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "cloak.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cloak"
  },
  "homepage_url": "https://getcloak.org",
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cloak@getcloak.org",
      "strict_min_version": "121.0"
    }
  }
}